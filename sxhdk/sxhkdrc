### GENERAL ###
# Open termin<C-LeftRelease>al
super + Return
	alacritty

# Program launcher
super + space
	rofi -show drun



### BSPWM ###
# Reiniciar Bspwm 
super + alt + Escape 
  bspc wm -r

# Switch workspaces
super + {h,l}
  bspc desktop -f {prev,next}

# Move windows to workspace
super + shift + h
  bscp node -d prev; bscp desktop -f prev

super + shift + l
  bscp node -d next; bscp desktop -f next

# Move window to monitor
super + shift + {j,k}
  bspc node -m {south,north} && bspc node -f {south,north}





### SYSTEM ###
# Logout
super + alt + q
  bspc quit
